            <input type="email" name="email" class="validate" required>
            <label for="object">Objet</label>
            <input type="text" name="object" class="validate" required>
            <label for="message">Message</label>
            <textarea id="message" class="materialize-textarea" name="message" rows="5" cols="120"></textarea>
            <button id="btn-paddding" class="col s12 waves-effect waves-light btn green darken-1">Envoyer</button>
        </form>
    </div>
