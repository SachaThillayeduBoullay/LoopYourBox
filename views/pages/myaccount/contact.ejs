</head>

<body>
    <!-- NARBAR -->
    <%- include('../../layouts/navbar.ejs') -%>
    <a class="backBtn" onclick="window.history.back();"><i class="fas fa-arrow-left"></i></a>
    <div class="row">
        <h2 class="sub_page-heading">Formulaire de contact</h2>
    </div>
    <div class="container">
        <form class="row" id="form-register" action="api/contact" method="POST">
            <label for="firstname">Pr√©nom</label>
            <input type="text" name="firstname" class="validate" required>
            <label for="lastname">Nom</label>
            <input type="text" name="lastname" class="validate" required>
